
{{drop-into-box sources=displaySourcesCopy showPlayButton=showPlayButton}}

displaySourcesCopy:
{{#each displaySourcesCopy as |item|}}
  {{item}}
{{/each}}

{{#if showPlayButton}}
  <p class="export__container">export mix</p>
{{/if}}

<div class="row">
  <div class="col-md-10">
    {{#if limitAll}}
      <div class="form-group">
        {{input value=filter class="form-control input-lg" placeholder="Filter sound by name"}}
      </div>
    {{else}}
        <div class="form-group">
          {{abc-buttons}}
        </div>
    {{/if}}
  </div>
</div>

<div class="row">
  {{#each filteredList as |library|}}
    <div class="col-md-4 library-item__container">
      {{library-item item=library badge=library.books.length addSound=(action 'addSound') removeSound=(action 'removeSound')}}
    </div>
  {{else}}
    {{#if model.isUpdating}}
      {{spinner-cube}}
    {{else}}
      <div class="col-md-12 text-center">
        <div class="alert alert-info">
          Sorry, no result.
        </div>
      </div>
    {{/if}}
  {{/each}}
</div>
