<div class="panel panel-default library-item">
	<div class="panel-heading">
		<h3 class="panel-title">{{item.name}}</h3>
	</div>
	<div class="panel-body" {{action 'clickSound'}}>
		<img src="/images/play-button.png" class="play-button">
		<div>
			<p>{{item.soundType}}</p>

			<p>{{item.audioLocation}}</p>
		</div>
	</div>
	<div class="library-item__add-item-container{{if isDisabled  ' library-item__add-item-container--disabled'}}" {{action addSound vocals}} {{action 'makeButtonDisabled'}}>
		<p class="library-item__add-item">Add sound</p>
	</div>
	<div class="library-item__add-item-container{{unless isDisabled  ' library-item__remove-item-container--hide'}}"{{action removeSound vocals}} {{action 'makeButtonActive'}}>
		<p class="library-item__add-item">Remove sound</p>
	</div>
</div>
